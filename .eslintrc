{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
  },
  "env": {
    "es6": true,
    "node": true,
  },
  "rules": {
    "quotes": [ 2, "single", { "avoidEscape": true, "allowTemplateLiterals": true } ],
    "semi": [2, "always"],
    "comma-dangle": [2, "always-multiline"]
  }
}
